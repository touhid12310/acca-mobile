{
  "expo": {
    "name": "ACCA Finance",
    "slug": "acca-expo",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "acca",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#1a73e8"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.acca.finance",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "ACCA needs access to your microphone for voice recording features.",
        "NSCameraUsageDescription": "ACCA needs access to your camera to capture receipts.",
        "NSPhotoLibraryUsageDescription": "ACCA needs access to your photos to upload receipts."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1a73e8"
      },
      "package": "com.acca.finance",
      "softwareKeyboardLayoutMode": "resize",
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-audio",
        {
          "microphonePermission": "Allow ACCA to access your microphone for voice recording."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow ACCA to access your photos to upload receipts.",
          "cameraPermission": "Allow ACCA to access your camera to capture receipts."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "1ae7615a-87b2-48cc-9c8c-0bf288e62a8f"
      }
    }
  }
}
